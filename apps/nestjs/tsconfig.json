{
  "compilerOptions": {
    "module": "CommonJS",
    "strictPropertyInitialization": false,
    "target": "ES2020",
    "lib": ["ES2020"],
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "types": ["node"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "tests/", "playwright.config.ts", "playwright-report"]
}
