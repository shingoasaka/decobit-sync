{
  "compilerOptions": {
    "module": "CommonJS",
    "strictPropertyInitialization": false,
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "types": ["node"],
    "baseUrl": "./",
    "paths": {
      "@prismaService": ["src/prisma/prisma.service"],
      "@asp/*": ["src/modules/asp/*"],
      "@discrepany/*": ["src/modules/discrepany-check/*"],
      "@logs/*": ["src/modules/logs/*"],
      "@cron/*": ["src/modules/cron/*"],
      "@common/*": ["src/modules/common/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
