FROM node:22-slim

# 必要なパッケージをインストール
RUN apt-get update -y && apt-get install -y \
    openssl \
    git \
    wget \
    gnupg \
    ca-certificates \
    procps \
    libxss1 \
    libnss3 \
    libnspr4 \
    libatk-bridge2.0-0 \
    libdrm2 \
    libxkbcommon0 \
    libxcomposite1 \
    libxdamage1 \
    libxrandr2 \
    libgbm1 \
    libasound2 \
    libpango-1.0-0 \
    libcairo2 \
    libatspi2.0-0 \
    && npm install -g pnpm@9.12.3

WORKDIR /app

# 依存関係をインストールするために必要なファイルをコピー
COPY package.json pnpm-lock.yaml pnpm-workspace.yaml ./
COPY packages/prisma ./packages/prisma
COPY apps/nestjs ./apps/nestjs

# 依存関係をインストール
RUN pnpm install --frozen-lockfile

# Prisma Clientの生成
RUN cd packages/prisma && \
    pnpm prisma generate && \
    cd ../..

# Playwrightのブラウザバイナリをインストール
RUN cd apps/nestjs && npx playwright install chromium --with-deps && cd ../..

# 環境変数の設定
ENV NODE_ENV=development
ENV PORT=3000
ENV HOST=0.0.0.0 